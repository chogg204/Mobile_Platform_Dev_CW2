<?xml version="1.0" encoding="utf-8"?>

<!-- Craig Hogg (S1903729) -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Linear layout to hold UI components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- TextView to display currency title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="Currency Title" />

        <!-- EditText for entering the multiplier -->
        <EditText
            android:id="@+id/multiplierEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount (Â£)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Calculate button -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- TextView to display the calculated result -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="CurrencyResult"
            android:visibility="gone" />

        <!-- CheckBox to reverse calculation -->
        <CheckBox
            android:id="@+id/reverseCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reverse"
            android:visibility="gone" />

        <!-- TextView to display currency description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="Currency Description"
            android:visibility="invisible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
